<h1>Trạm dừng</h1>

<%= will_paginate @posts %>

<table  class="table table-striped">
  <tr>
    <th>Tên trạm dừng</th>
    <th>Địa chỉ</th>
    <th></th>

  </tr>

<% @tramdungs.each do |tramdung| %>
  <tr>
    <td><%= tramdung.tentram %></td>
    <td><%= tramdung.diachitram %></td>
    <td>
      <%= link_to tramdung, :class => 'btn  btn-mini btn-info' do %>
          <i class="icon-info-sign"></i>
      <% end %>
      &nbsp;
      <%= link_to edit_tramdung_path(tramdung), :class => 'btn  btn-mini btn-warning' do %>
          <i class="icon-pencil"></i>
      <% end %>
      &nbsp;
      <%= link_to tramdung_path(tramdung), method: :delete, data: {confirm: "Bạn có chắc chắn muốn xóa"}, :class => 'btn  btn-mini btn-danger' do %>
          <i class="icon-remove"></i>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Thêm mới', new_tramdung_path, :class =>'btn btn-success' %>
