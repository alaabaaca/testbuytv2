<div class="tieude">
  <h3>CẤP QUYỀN CHO NGƯỜI DÙNG</h3>
</div>


<table class="table ">
  <tr>
    <th>Tên người dùng</th>
    <th>THUỘC NHÓM QUYỀN</th>
    <th></th>
  </tr>

  <% @roles_users.each do |roles_user| %>
      <tr>
        <% @role = Role.find_by_id(roles_user.role_id)
           @user = User.find_by_id(roles_user.user_id) %>
        <td><%= @user.email %></td>
        <td><%= @role.name %></td>
        <td style="text-align: right">

          <%= link_to roles_user, :class => 'btn  btn-mini btn-info' do %>
              <i class="icon-info-sign"></i>
          <% end %>
          &nbsp;
          <% if can? :update, RolesUser %>
              <%= link_to edit_roles_user_path(roles_user), :class => 'btn  btn-mini btn-warning' do %>
                  <i class="icon-pencil"></i>
              <% end %>
          <% end %>
          &nbsp;
          <% if can? :destroy, RolesUser %>
              <%= link_to roles_user_path(roles_user), method: :delete, data: {confirm: "Bạn có chắc chắn muốn xóa"}, :class => 'btn  btn-mini btn-danger' do %>
                  <i class="icon-remove"></i>
              <% end %>
          <% end %>
        </td>
      </tr>
  <% end %>
</table>

<br/>

<%= link_to 'Thêm mới', new_roles_user_path, :class => 'btn btn-success' %>


<div style=" float: right;" class="flickr_pagination">
  <%= will_paginate @posts %>
</div>

