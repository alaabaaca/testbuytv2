<h1>Danh sách công ty</h1>

<%= will_paginate @posts %>

<table class="table table-striped">
  <tr>
    <th>Tên công ty</th>
    <th>Địa chỉ</th>
    <th>Số điện thoại</th>
    <th></th>
  </tr>

<% @congties.each do |congty| %>
  <tr>
    <td><%= congty.tenct %></td>
    <td><%= congty.diachict %></td>
    <td><%= congty.sodtct %></td>
    <td>
      <%= link_to congty, :class => 'btn  btn-mini btn-info' do %>
          <i class="icon-info-sign"></i>
      <% end %>
      &nbsp;
      <%= link_to edit_congty_path(congty), :class => 'btn  btn-mini btn-warning' do %>
          <i class="icon-pencil"></i>
      <% end %>
      &nbsp;
      <%= link_to congty_path(congty), method: :delete, data: {confirm: "Bạn có chắc chắn muốn xóa"}, :class => 'btn  btn-mini btn-danger' do %>
          <i class="icon-remove"></i>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Thêm công ty', new_congty_path, :class =>'btn btn-success' %>
