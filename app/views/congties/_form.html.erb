<%= simple_form_for @congty, :html => {:class => 'form-horizontal'} do |f| %>
  <% if @congty.errors.any? %>
    <div id="error_explanation">
      <h2>Có <%= pluralize(@congty.errors.count, "") %>lỗi :</h2>

      <ul>
        <% @congty.errors.values.each do |msg| %>
            <% msg.each do |m| %>
                <li><%= m %></li>
            <% end %>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Tên công ty:" %><br />
    <%= f.text_field :tenct %>
  </div>
  <div class="field">
    <%= f.label "Địa chỉ:" %><br />
    <%= f.text_field :diachict %>
  </div>
  <div class="field">
    <%= f.label "Điện thoại:" %><br />
    <%= f.number_field :sodtct %>
  </div>
  <div class="actions">
    <button class="btn btn-primary" type="submit">Lưu</button>
    <%= link_to "Hủy", congties_path, :class => 'btn'  %>
  </div>
<% end %>
