<div class="tieude">
  <h3>CÁC QUYỀN CỦA NGƯỜI DÙNG</h3>
</div>

<table class="table ">
  <tr>
    <th>Tên quyền</th>
    <th></th>

  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%= role.name %></td>

    <td style="text-align: right">
      <%= link_to role, :class => 'btn  btn-mini btn-info' do %>
          <i class="icon-info-sign"></i>
      <% end %>
      &nbsp;
      <% if can? :update, Role %>
          <%= link_to edit_role_path(role), :class => 'btn  btn-mini btn-warning' do %>
              <i class="icon-pencil"></i>
          <% end %>
      <% end %>
      &nbsp;
      <% if can? :destroy, Role %>
          <%= link_to role_path(role), method: :delete, data: {confirm: "Bạn có chắc chắn muốn xóa"}, :class => 'btn  btn-mini btn-danger' do %>
              <i class="icon-remove"></i>
          <% end %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Thêm mới', new_role_path, :class => 'btn btn-success' %>

<div style=" float: right;" class="flickr_pagination">
  <%= will_paginate @posts %>
</div>
